{
  "publisher": "OSpoon",
  "name": "quick-cmd",
  "displayName": "QuickCmd",
  "version": "0.0.13",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "一个专为开发者设计的 VS Code 扩展，旨在简化开发阶段各种终端命令的使用，减少记忆负担，提高开发效率。",
  "author": "OSpoon <zxin088@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/OSpoon",
  "homepage": "https://github.com/OSpoon/QuickCmd#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/OSpoon/QuickCmd"
  },
  "bugs": {
    "url": "https://github.com/OSpoon/QuickCmd/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/OSpoon"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quickCmd",
          "title": "Quick Commands",
          "icon": "res/icon.png"
        }
      ]
    },
    "views": {
      "quickCmd": [
        {
          "id": "quickCmdView",
          "name": "Commands",
          "icon": "res/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "QuickCmd",
      "properties": {
        "quickCmd.defaultCategory": {
          "type": "string",
          "default": "all",
          "description": "Default category to display (all or specific category name)"
        },
        "quickCmd.dependencyDetection": {
          "type": "object",
          "default": {},
          "description": "依赖检测配置：定义用于检测系统工具是否安装的命令。只有检测成功的工具对应的分组才会显示。",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string",
                "description": "用于检测依赖是否安装的命令"
              },
              "enabled": {
                "type": "boolean",
                "description": "是否启用此依赖检测"
              },
              "description": {
                "type": "string",
                "description": "依赖检测的描述"
              }
            }
          }
        },
        "quickCmd.categoryDisplay": {
          "type": "object",
          "default": {},
          "description": "分类显示配置：自定义每个分类的显示名称和图标。用户可以添加新分类或修改现有分类的显示信息。",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "displayName": {
                "type": "string",
                "description": "分类的显示名称"
              },
              "icon": {
                "type": "string",
                "description": "分类的图标名称（VS Code 图标）"
              }
            },
            "required": ["displayName", "icon"]
          }
        }
      }
    },
    "commands": [
      {
        "command": "quickCmd.sendToTerminal",
        "title": "Send to Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "quickCmd.refreshView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "quickCmd.searchCommands",
        "title": "Search Commands",
        "icon": "$(search)"
      },
      {
        "command": "quickCmd.copyCommand",
        "title": "Copy Command",
        "icon": "$(copy)"
      },
      {
        "command": "quickCmd.editCommand",
        "title": "Edit Command",
        "icon": "$(edit)"
      },
      {
        "command": "quickCmd.deleteCommand",
        "title": "Delete Command",
        "icon": "$(trash)"
      },
      {
        "command": "quickCmd.addCommand",
        "title": "Add New Command",
        "icon": "$(add)"
      },
      {
        "command": "quickCmd.editCategory",
        "title": "Rename Category",
        "icon": "$(edit)",
        "category": "Quick Commands"
      },
      {
        "command": "quickCmd.deleteCategory",
        "title": "Delete Category",
        "icon": "$(trash)",
        "category": "Quick Commands"
      },
      {
        "command": "quickCmd.clearAllData",
        "title": "Clear All Command Data",
        "icon": "$(trash)",
        "category": "Quick Commands"
      },
      {
        "command": "quickCmd.exportData",
        "title": "Export Command Data",
        "icon": "$(export)",
        "category": "Quick Commands"
      },
      {
        "command": "quickCmd.importData",
        "title": "Import Command Data",
        "icon": "$(import)",
        "category": "Quick Commands"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "quickCmd.addCommand",
          "when": "view == quickCmdView",
          "group": "navigation@1"
        },
        {
          "command": "quickCmd.searchCommands",
          "when": "view == quickCmdView",
          "group": "navigation@2"
        },
        {
          "command": "quickCmd.refreshView",
          "when": "view == quickCmdView",
          "group": "navigation@3"
        },
        {
          "command": "quickCmd.importData",
          "when": "view == quickCmdView",
          "group": "management@1"
        },
        {
          "command": "quickCmd.exportData",
          "when": "view == quickCmdView",
          "group": "management@2"
        },
        {
          "command": "quickCmd.clearAllData",
          "when": "view == quickCmdView",
          "group": "management@3"
        }
      ],
      "view/item/context": [
        {
          "command": "quickCmd.sendToTerminal",
          "when": "view == quickCmdView && viewItem == command",
          "group": "inline@1"
        },
        {
          "command": "quickCmd.editCommand",
          "when": "view == quickCmdView && viewItem == command",
          "group": "inline@2"
        },
        {
          "command": "quickCmd.copyCommand",
          "when": "view == quickCmdView && viewItem == command",
          "group": "inline@3"
        },
        {
          "command": "quickCmd.deleteCommand",
          "when": "view == quickCmdView && viewItem == command",
          "group": "inline@4"
        },
        {
          "command": "quickCmd.sendToTerminal",
          "when": "view == quickCmdView && viewItem == project-script",
          "group": "inline@1"
        },
        {
          "command": "quickCmd.copyCommand",
          "when": "view == quickCmdView && viewItem == project-script",
          "group": "inline@2"
        },
        {
          "command": "quickCmd.editCategory",
          "when": "view == quickCmdView && viewItem == category",
          "group": "inline@1"
        },
        {
          "command": "quickCmd.deleteCategory",
          "when": "view == quickCmdView && viewItem == category",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "release": "bumpp"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.17.2",
    "@types/vscode": "^1.74.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^10.2.3",
    "eslint": "^9.33.0",
    "esno": "^4.8.0",
    "pnpm": "^10.15.0",
    "reactive-vscode": "^0.2.22",
    "tsdown": "^0.9.9",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
